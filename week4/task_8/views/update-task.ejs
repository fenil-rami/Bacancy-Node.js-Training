<div style="display: flex; align-items: center; justify-content: center; height: 75%;">
  <form method="post" action="/api/v1/tasks/update/<%= task.id %>"
    style="display: flex;flex-direction: column; justify-content: center; align-items:center;">
    <h1>UPDATE TASK</h1>
    <div>
      <label for="title" style="font-size: 22px; margin-right: 10px;">Title : </label>
      <input type="text" name="title" placeholder="Add task title here" style="height: 35px;width: 200px;" required value="<%= task.title %>" />
    </div>
    <div style="margin-top: 20px;">
      <label for="description" style="font-size: 22px; margin-right: 10px;">Description : </label>
      <input type="text" name="description" placeholder="Add task description here" style="height: 35px;width: 200px;" required value="<%= task.description %>" />
    </div>
    
    <div>
      <button type="submit" style="margin-top: 20px;width: 175px;height: 40px; font-size: 20px; cursor: pointer;">UPDATE TASK</button>
      <button style="margin-left:12px; margin-top:25px;width: 190px;height: 40px; font-size: 20px; cursor: pointer;" onclick="location.pathname='/tasks'">GO TO ALL TASKS</button>
    </div>
  </form>
</div>